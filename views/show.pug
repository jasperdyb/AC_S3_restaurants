extends main.pug

block view
  h1(class="mb-1 restaurant-show-title") #{restaurant.name}
  div(class="container")
    div(class="row")
      div(class="col-12 col-md-10 mx-auto")
        p(class="mb-1")
          span(class="text-secondary")
            i(class="fas fa-utensils pr-2") 
            |類別：
          |#{restaurant.category}
        p(class="mb-1")
          span(class="text-secondary")
            i(class="fas fa-map-marker-alt pr-2") 
            |地址：
          |#{restaurant.location}
          a(href= restaurant.google_map class="text-secondary" target="_blank")
            i(class="fas fa-location-arrow pr-2 fa-xs")
        p(class="mb-1")
          span(class="text-secondary")
            i(class="fas fa-mobile-alt  pr-2") 
            |電話：
          |#{restaurant.phone}

        p(class="mb-5")
          |#{restaurant.description}

        img(src=restaurant.image class="rounded mx-auto d-block mb-4 w-100"  alt=restaurant.name  style="max-width: 600px;")
